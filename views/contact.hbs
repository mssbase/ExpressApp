<h2>Contact me</h2>
{{#if isSent}}
    <div class="isSent">
        <p>Your data has been sent! File {{ fileName }} has been sent!</p>
    </div>
{{/if}}

{{#if isError}}
    <div class="isError"><p>Dont leave any field empty</p></div>
{{/if}}

<form action="/contact/send-message" enctype="multipart/form-data" method="POST">
    <label>
        Your name: <input type="text" name="author">
    </label>
    <label>
        Your email: <input type="email" name="sender">
    </label>
    <label>
        Title: <input type="text" name="title">
    </label>
    <label>
        File: <input type="file" name="image" accept=" .png, .jpg, .jpeg, .gif">
    </label>
    <label>
        Message: <textarea name="message"></textarea>
    </label>
    <button type="submit">Send message</button>
</form>